<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="detailViewModel"
            type="kr.co.lee.accoutproject.view.detailactivity.viewmodel.DetailViewModel" />

        <import type="java.text.DecimalFormat" />

        <variable
            name="decimalFormat"
            type="DecimalFormat" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.detailactivity.view.DetailActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/detail_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            app:layout_constraintTop_toTopOf="parent"
            app:menu="@menu/add_toolbar_menu">

            <TextView
                android:id="@+id/toolbar_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{detailViewModel.money}"
                android:textSize="25sp" />

        </androidx.appcompat.widget.Toolbar>

        <EditText
            android:id="@+id/history_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/history_label"
            android:inputType="text"
            android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="@id/detail_toolbar" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/history_view" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>